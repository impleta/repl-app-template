{
  "name": "{{app_name}}",
  "version": "1.0.0",
  "main": "./build/src/index.js",
  "bin": {
    "{{app_name}}": "./build/src/index.js"
  },
  "private": true,
  "preferGlobal": true,
  "files": [
    "build/src"
  ],
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "dev": "tsc-watch --onSuccess \"npm run postcompile\"",
    "postcompile": "npm run addJsSuffix && npm run copyDts && npm run fixDts",
    "addJsSuffix": "npx replace-in-file --configFile=replace-config.cjs --quiet",
    "copyDts": "npx copyfiles -f -e \"build/src/index.d.ts\"  \"build/src/**/*.d.ts\" @types",
    "fixDts": "npx replace-in-file --configFile=replace-config-dts.cjs --quiet",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "copyfiles": "^2.4.1",
    "gts": "^3.1.1",
    "replace-in-file": "^6.3.5",
    "tsc-watch": "^6.0.0",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "@impleta/repl-app": "^1.2.1",
    "chai": "^4.3.7"
  }
}
